@{
    ViewData["Title"] = "註冊 - GameCore";
    Layout = "_Layout";
}

@section Styles {
    <style>
        :root {
            --bg: #eef3f8;
            --bg2: #ffffff;
            --ink: #1f2937;
            --muted: #64748b;
            --line: #e5e7eb;
            --surface: rgba(255,255,255,.75);
            --glass: rgba(255,255,255,.45);
            --accent: #7557ff;
            --accent-2: #34d2ff;
            --accent-3: #22c55e;
            --radius: 18px;
            --radius-sm: 12px;
            --shadow: 0 18px 40px rgba(17,24,39,.12);
            --blur: 14px;
        }

        body.dark {
            --bg: #0c111b;
            --bg2: #0a0f18;
            --ink: #e5edff;
            --muted: #9fb1c9;
            --line: #1e2b43;
            --surface: rgba(22,30,48,.65);
            --glass: rgba(18,24,39,.50);
            --shadow: 0 18px 42px rgba(0,0,0,.35);
        }

        body {
            margin: 0;
            color: var(--ink);
            font: 16px/1.65 system-ui,-apple-system,"Segoe UI",Roboto,"Noto Sans TC","PingFang TC","Microsoft JhengHei",sans-serif;
            background: radial-gradient(900px 500px at -10% -10%, rgba(117,87,255,.10), transparent 60%),
                        radial-gradient(800px 460px at 110% 10%, rgba(52,210,255,.10), transparent 50%),
                        linear-gradient(180deg, var(--bg), var(--bg2));
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .register-container {
            width: 100%;
            max-width: 480px;
            background: var(--glass);
            border: 1px solid var(--line);
            border-radius: var(--radius);
            backdrop-filter: blur(var(--blur));
            box-shadow: var(--shadow);
            padding: 32px;
        }

        .register-header {
            text-align: center;
            margin-bottom: 32px;
        }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            margin-bottom: 16px;
        }

        .logo-badge {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--accent), var(--accent-2));
            color: #fff;
            display: grid;
            place-items: center;
            font-weight: 900;
            font-size: 20px;
        }

        .logo-text {
            font-size: 28px;
            font-weight: 900;
            color: var(--ink);
        }

        .register-subtitle {
            color: var(--muted);
            font-size: 16px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--ink);
        }

        .form-input {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid var(--line);
            border-radius: var(--radius-sm);
            background: var(--surface);
            color: var(--ink);
            font-size: 16px;
            transition: all 0.2s ease;
            box-sizing: border-box;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(117,87,255,.1);
        }

        .form-input::placeholder {
            color: var(--muted);
        }

        .form-input.error {
            border-color: #dc2626;
            box-shadow: 0 0 0 3px rgba(220,38,38,.1);
        }

        .form-input.success {
            border-color: #16a34a;
            box-shadow: 0 0 0 3px rgba(22,163,74,.1);
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
        }

        .password-strength {
            margin-top: 8px;
            font-size: 12px;
        }

        .strength-bar {
            height: 4px;
            background: var(--line);
            border-radius: 2px;
            overflow: hidden;
            margin-bottom: 4px;
        }

        .strength-fill {
            height: 100%;
            transition: all 0.3s ease;
        }

        .strength-weak .strength-fill {
            background: #dc2626;
            width: 25%;
        }

        .strength-medium .strength-fill {
            background: #f59e0b;
            width: 50%;
        }

        .strength-strong .strength-fill {
            background: #16a34a;
            width: 75%;
        }

        .strength-very-strong .strength-fill {
            background: #059669;
            width: 100%;
        }

        .strength-text {
            color: var(--muted);
            font-size: 11px;
        }

        .form-checkbox {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            margin-bottom: 20px;
        }

        .form-checkbox input[type="checkbox"] {
            width: 18px;
            height: 18px;
            accent-color: var(--accent);
            margin-top: 2px;
        }

        .form-checkbox label {
            color: var(--ink);
            font-size: 14px;
            line-height: 1.4;
        }

        .form-checkbox a {
            color: var(--accent);
            text-decoration: none;
        }

        .form-checkbox a:hover {
            text-decoration: underline;
        }

        .btn {
            width: 100%;
            padding: 14px 20px;
            border: none;
            border-radius: var(--radius-sm);
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--accent), var(--accent-2));
            color: #fff;
            box-shadow: var(--shadow);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 20px 40px rgba(117,87,255,.3);
        }

        .btn-secondary {
            background: var(--surface);
            color: var(--ink);
            border: 1px solid var(--line);
        }

        .btn-secondary:hover {
            background: var(--bg2);
            transform: translateY(-1px);
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 24px 0;
            color: var(--muted);
            font-size: 14px;
        }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            height: 1px;
            background: var(--line);
        }

        .divider span {
            padding: 0 16px;
        }

        .oauth-buttons {
            display: grid;
            gap: 12px;
            margin-bottom: 24px;
        }

        .oauth-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            padding: 12px 16px;
            border: 1px solid var(--line);
            border-radius: var(--radius-sm);
            background: var(--surface);
            color: var(--ink);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .oauth-btn:hover {
            background: var(--bg2);
            transform: translateY(-1px);
            box-shadow: var(--shadow);
        }

        .oauth-btn.google {
            border-color: #ea4335;
            color: #ea4335;
        }

        .oauth-btn.facebook {
            border-color: #1877f2;
            color: #1877f2;
        }

        .oauth-btn.discord {
            border-color: #5865f2;
            color: #5865f2;
        }

        .register-footer {
            text-align: center;
            margin-top: 24px;
            color: var(--muted);
            font-size: 14px;
        }

        .register-footer a {
            color: var(--accent);
            text-decoration: none;
            font-weight: 600;
        }

        .register-footer a:hover {
            text-decoration: underline;
        }

        .error-message {
            background: rgba(239,68,68,.1);
            border: 1px solid rgba(239,68,68,.2);
            color: #dc2626;
            padding: 12px 16px;
            border-radius: var(--radius-sm);
            margin-bottom: 20px;
            font-size: 14px;
        }

        .success-message {
            background: rgba(34,197,94,.1);
            border: 1px solid rgba(34,197,94,.2);
            color: #16a34a;
            padding: 12px 16px;
            border-radius: var(--radius-sm);
            margin-bottom: 20px;
            font-size: 14px;
        }

        .loading {
            opacity: 0.7;
            pointer-events: none;
        }

        .loading .btn {
            position: relative;
        }

        .loading .btn::after {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            width: 20px;
            height: 20px;
            margin: -10px 0 0 -10px;
            border: 2px solid transparent;
            border-top: 2px solid currentColor;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .validation-message {
            margin-top: 4px;
            font-size: 12px;
        }

        .validation-message.error {
            color: #dc2626;
        }

        .validation-message.success {
            color: #16a34a;
        }

        @media (max-width: 480px) {
            .register-container {
                padding: 24px;
            }
            
            .logo-text {
                font-size: 24px;
            }
            
            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

