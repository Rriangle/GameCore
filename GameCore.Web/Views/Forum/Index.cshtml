        <!-- 右側資訊欄 -->
        <div class="col-lg-4">
            <!-- 搜尋框 -->
            <div class="search-section glass-card mx-3 my-3">
                <h4 class="section-title mb-3">
                    <i class="fas fa-search me-2" style="color: #3b82f6;"></i>
                    搜尋討論
                </h4>
                <form action="/Forum/Search" method="get">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control glass-input" name="q" placeholder="輸入關鍵字..." value="">
                        <button class="btn glass-btn" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <div class="search-options">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="type" value="all" id="searchAll" checked>
                            <label class="form-check-label" for="searchAll">全部</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="type" value="threads" id="searchThreads">
                            <label class="form-check-label" for="searchThreads">主題</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="type" value="posts" id="searchPosts">
                            <label class="form-check-label" for="searchPosts">回覆</label>
                        </div>
                    </div>
                </form>
            </div>

            <!-- 熱門主題 -->
