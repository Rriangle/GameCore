<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/glassmorphism.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameCore.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="game-body">
    <header>
        <nav class="navbar navbar-expand-lg glass-navbar fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-gamepad me-2"></i>
                    <span class="brand-text">GameCore</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>首頁
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Store" asp-action="Index">
                                <i class="fas fa-store me-1"></i>官方商城
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Forum" asp-action="Index">
                                <i class="fas fa-comments me-1"></i>論壇
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pet" asp-action="Index">
                                <i class="fas fa-paw me-1"></i>我的寵物
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="SignIn" asp-action="Index">
                                <i class="fas fa-calendar-check me-1"></i>每日簽到
                            </a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle user-menu" href="#" role="button" data-bs-toggle="dropdown">
                                <img src="/images/avatars/default.png" alt="頭像" class="user-avatar me-2">
                                <span class="username">遊戲玩家</span>
                                <span class="user-points ms-2">
                                    <i class="fas fa-coins text-warning"></i> 1,250
                                </span>
                            </a>
                            <ul class="dropdown-menu glass-dropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                        <i class="fas fa-user me-2"></i>個人中心
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Orders">
                                        <i class="fas fa-shopping-bag me-2"></i>我的訂單
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Posts">
                                        <i class="fas fa-pen me-2"></i>我的發文
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Settings">
                                        <i class="fas fa-cog me-2"></i>帳戶設定
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>登出
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link cart-link" asp-controller="Store" asp-action="Cart">
                                <i class="fas fa-shopping-cart"></i>
                                <span class="cart-badge">3</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="main-content">
        @RenderBody()
    </main>

    <footer class="glass-footer mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>
                        <i class="fas fa-gamepad me-2"></i>
                        GameCore
                    </h5>
                    <p class="text-muted">最專業的遊戲社群平台，提供遊戲資訊、交流討論、商品購買等全方位服務。</p>
                </div>
                <div class="col-md-2">
                    <h6>快速連結</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Store" asp-action="Index">官方商城</a></li>
                        <li><a asp-controller="Forum" asp-action="Index">遊戲論壇</a></li>
                        <li><a asp-controller="Pet" asp-action="Index">寵物系統</a></li>
                        <li><a asp-controller="SignIn" asp-action="Index">每日簽到</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6>用戶服務</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Profile" asp-action="Index">個人中心</a></li>
                        <li><a asp-controller="Profile" asp-action="Orders">我的訂單</a></li>
                        <li><a asp-controller="Profile" asp-action="Settings">帳戶設定</a></li>
                        <li><a href="#">客服中心</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6>關於我們</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Privacy">隱私政策</a></li>
                        <li><a href="#">服務條款</a></li>
                        <li><a href="#">聯絡我們</a></li>
                        <li><a href="#">開發團隊</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6>關注我們</h6>
                    <div class="social-links">
                        <a href="#" class="social-link"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-discord"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
            <hr class="footer-divider">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="mb-0">&copy; 2025 GameCore. All rights reserved. | 版本 1.0.0</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
