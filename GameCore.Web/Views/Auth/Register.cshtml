@section Scripts {
    <script>
        // 密碼強度檢查
        function checkPasswordStrength(password) {
            let strength = 0;
            let feedback = [];
            
            if (password.length >= 8) strength += 1;
            else feedback.push('至少8個字元');
            
            if (/[a-z]/.test(password)) strength += 1;
            else feedback.push('包含小寫字母');
            
            if (/[A-Z]/.test(password)) strength += 1;
            else feedback.push('包含大寫字母');
            
            if (/[0-9]/.test(password)) strength += 1;
            else feedback.push('包含數字');
            
            if (/[^A-Za-z0-9]/.test(password)) strength += 1;
            else feedback.push('包含特殊字元');
            
            return { strength, feedback };
        }
        
        // 更新密碼強度顯示
        function updatePasswordStrength(password) {
            const strengthDiv = document.getElementById('passwordStrength');
            const { strength, feedback } = checkPasswordStrength(password);
            
            strengthDiv.className = 'password-strength';
            
            if (password.length === 0) {
                strengthDiv.querySelector('.strength-text').textContent = '密碼強度';
                return;
            }
            
            let strengthClass = '';
            let strengthText = '';
            
            if (strength <= 1) {
                strengthClass = 'strength-weak';
                strengthText = '弱';
            } else if (strength <= 2) {
                strengthClass = 'strength-medium';
                strengthText = '中等';
            } else if (strength <= 3) {
                strengthClass = 'strength-strong';
                strengthText = '強';
            } else {
                strengthClass = 'strength-very-strong';
                strengthText = '非常強';
            }
            
            strengthDiv.classList.add(strengthClass);
            strengthDiv.querySelector('.strength-text').textContent = `密碼強度：${strengthText}`;
        }
        
        // 即時驗證
        let validationTimeout;
        
        function debounceValidation(fn, delay) {
            clearTimeout(validationTimeout);
            validationTimeout = setTimeout(fn, delay);
        }
        
        // 帳號驗證
        document.getElementById('userAccount').addEventListener('input', function() {
            const account = this.value;
            const validation = document.getElementById('userAccountValidation');
            
            debounceValidation(async () => {
                if (account.length === 0) {
                    validation.textContent = '';
                    this.className = 'form-input';
                    return;
                }
                
                if (!/^[a-zA-Z0-9_]+$/.test(account)) {
                    validation.textContent = '帳號只能包含英文字母、數字和底線';
                    validation.className = 'validation-message error';
                    this.className = 'form-input error';
                    return;
                }
                
                try {
                    const response = await fetch(`/api/auth/check-account?account=${encodeURIComponent(account)}`);
                    const result = await response.json();
                    
                    if (result.data.exists) {
                        validation.textContent = '此帳號已被使用';
                        validation.className = 'validation-message error';
                        this.className = 'form-input error';
                    } else {
                        validation.textContent = '帳號可用';
                        validation.className = 'validation-message success';
                        this.className = 'form-input success';
                    }
                } catch (error) {
                    console.error('檢查帳號失敗:', error);
                }
            }, 500);
        });
        
        // 電子郵件驗證
        document.getElementById('email').addEventListener('input', function() {
            const email = this.value;
            const validation = document.getElementById('emailValidation');
            
            debounceValidation(async () => {
                if (email.length === 0) {
                    validation.textContent = '';
                    this.className = 'form-input';
                    return;
                }
                
                if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                    validation.textContent = '請輸入有效的電子郵件地址';
                    validation.className = 'validation-message error';
                    this.className = 'form-input error';
                    return;
                }
                
                try {
                    const response = await fetch(`/api/auth/check-email?email=${encodeURIComponent(email)}`);
                    const result = await response.json();
                    
                    if (result.data.exists) {
                        validation.textContent = '此電子郵件已被使用';
                        validation.className = 'validation-message error';
                        this.className = 'form-input error';
                    } else {
                        validation.textContent = '電子郵件可用';
                        validation.className = 'validation-message success';
                        this.className = 'form-input success';
                    }
                } catch (error) {
                    console.error('檢查電子郵件失敗:', error);
                }
            }, 500);
        });
        
        // 密碼強度檢查
        document.getElementById('password').addEventListener('input', function() {
            updatePasswordStrength(this.value);
        });
        
        // 確認密碼驗證
        document.getElementById('confirmPassword').addEventListener('input', function() {
            const password = document.getElementById('password').value;
            const confirmPassword = this.value;
            const validation = document.getElementById('confirmPasswordValidation');
            
            if (confirmPassword.length === 0) {
                validation.textContent = '';
                this.className = 'form-input';
                return;
            }
            
            if (password !== confirmPassword) {
                validation.textContent = '密碼與確認密碼不符';
                validation.className = 'validation-message error';
                this.className = 'form-input error';
            } else {
                validation.textContent = '密碼確認成功';
                validation.className = 'validation-message success';
                this.className = 'form-input success';
            }
        });
        
        // 註冊表單處理
        document.getElementById('registerForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const form = e.target;
            const submitBtn = document.getElementById('registerBtn');
            const errorMessage = document.getElementById('errorMessage');
            const successMessage = document.getElementById('successMessage');
            
            // 隱藏訊息
            errorMessage.style.display = 'none';
            successMessage.style.display = 'none';
            
            // 顯示載入狀態
            form.classList.add('loading');
            submitBtn.textContent = '註冊中...';
            
            try {
                const formData = new FormData(form);
                const requestData = {
                    userName: formData.get('userName'),
                    userAccount: formData.get('userAccount'),
                    email: formData.get('email'),
                    password: formData.get('password'),
                    confirmPassword: formData.get('confirmPassword')
                };
                
                const response = await fetch('/api/auth/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(requestData)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // 儲存 Token
                    if (result.token) {
                        localStorage.setItem('authToken', result.token);
                    }
                    
                    // 儲存用戶資訊
                    if (result.userInfo) {
                        localStorage.setItem('userInfo', JSON.stringify(result.userInfo));
                    }
                    
                    // 顯示成功訊息
                    successMessage.textContent = '註冊成功！正在跳轉...';
                    successMessage.style.display = 'block';
                    
                    // 跳轉到首頁
                    setTimeout(() => {
                        window.location.href = '/';
                    }, 1000);
                } else {
                    // 顯示錯誤訊息
                    errorMessage.textContent = result.errorMessage || '註冊失敗，請檢查輸入資料';
                    errorMessage.style.display = 'block';
                }
            } catch (error) {
                console.error('註冊錯誤:', error);
                errorMessage.textContent = '註冊過程中發生錯誤，請稍後再試';
                errorMessage.style.display = 'block';
            } finally {
                // 移除載入狀態
                form.classList.remove('loading');
                submitBtn.textContent = '註冊帳號';
            }
        });
        
        // OAuth 註冊處理
        function oauthRegister(provider) {
            // 這裡應該實作 OAuth 註冊邏輯
            // 目前先顯示提示訊息
            alert(`${provider} 註冊功能即將推出！`);
        }
        
        // 檢查是否已經登入
        document.addEventListener('DOMContentLoaded', function() {
            const token = localStorage.getItem('authToken');
            if (token) {
                // 如果已經登入，跳轉到首頁
                window.location.href = '/';
            }
        });
    </script>
