                        </svg>
                        使用 Discord 註冊
                    </a>
                </div>
            </div>

            <div class="divider">
                <span>或填寫註冊資料</span>
            </div>

            <!-- 註冊表單 -->
            <form asp-action="Register" asp-controller="Account" method="post" class="auth-form register-form">
                <div asp-validation-summary="All" class="validation-summary"></div>
                
                <!-- 基本資料 -->
                <div class="form-section">
                    <h4 class="section-title">基本資料</h4>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="UserName">真實姓名 <span class="required">*</span></label>
                            <input name="UserName" type="text" required 
                                   placeholder="請輸入您的真實姓名" 
                                   class="form-control" 
                                   autocomplete="name">
                        </div>
                        
                        <div class="form-group">
                            <label for="UserNickName">暱稱 <span class="required">*</span></label>
                            <input name="UserNickName" type="text" required 
                                   placeholder="顯示給其他用戶的暱稱" 
                                   class="form-control" 
                                   autocomplete="nickname">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="Email">Email 地址 <span class="required">*</span></label>
                        <input name="Email" type="email" required 
                               placeholder="example@email.com" 
                               class="form-control" 
                               autocomplete="email">
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="UserAccount">登入帳號 <span class="required">*</span></label>
                            <input name="UserAccount" type="text" required 
                                   placeholder="6-20字元，僅限英數字" 
                                   class="form-control" 
                                   pattern="[a-zA-Z0-9]{6,20}"
                                   autocomplete="username">
                        </div>
                        
                        <div class="form-group">
                            <label for="Gender">性別 <span class="required">*</span></label>
                            <select name="Gender" required class="form-control">
                                <option value="">請選擇</option>
                                <option value="M">男性</option>
                                <option value="F">女性</option>
                                <option value="O">其他</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- 聯絡資料 -->
                <div class="form-section">
                    <h4 class="section-title">聯絡資料</h4>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="IdNumber">身分證字號 <span class="required">*</span></label>
                            <input name="IdNumber" type="text" required 
                                   placeholder="A123456789" 
                                   class="form-control" 
                                   pattern="[A-Z][12][0-9]{8}"
                                   maxlength="10">
                        </div>
                        
                        <div class="form-group">
                            <label for="Cellphone">手機號碼 <span class="required">*</span></label>
                            <input name="Cellphone" type="tel" required 
                                   placeholder="0912345678" 
                                   class="form-control" 
                                   pattern="09[0-9]{8}"
                                   maxlength="10">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="DateOfBirth">出生日期 <span class="required">*</span></label>
                        <input name="DateOfBirth" type="date" required 
                               class="form-control" 
                               max="2010-01-01">
                    </div>
                    
                    <div class="form-group">
                        <label for="Address">地址 <span class="required">*</span></label>
                        <input name="Address" type="text" required 
                               placeholder="請輸入完整地址" 
                               class="form-control">
                    </div>
                </div>

                <!-- 密碼設定 -->
                <div class="form-section">
                    <h4 class="section-title">密碼設定</h4>
                    
                    <div class="form-group">
                        <label for="Password">密碼 <span class="required">*</span></label>
                        <input name="Password" type="password" required 
                               placeholder="至少8個字元，包含大小寫字母和數字" 
                               class="form-control" 
                               minlength="8"
                               autocomplete="new-password">
                        <div class="password-strength">
                            <div class="strength-bar">
                                <div class="strength-fill" id="strengthFill"></div>
                            </div>
                            <span class="strength-text" id="strengthText">密碼強度</span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="ConfirmPassword">確認密碼 <span class="required">*</span></label>
                        <input name="ConfirmPassword" type="password" required 
                               placeholder="請再次輸入密碼" 
                               class="form-control" 
                               autocomplete="new-password">
                    </div>
                </div>

                <!-- 服務條款 -->
                <div class="form-section">
                    <div class="agreement-section">
                        <label class="checkbox-container">
                            <input name="AgreeToTerms" type="checkbox" required>
                            <span class="checkmark"></span>
                            我已閱讀並同意 <a href="/Terms" target="_blank">服務條款</a> 和 <a href="/Privacy" target="_blank">隱私政策</a>
                        </label>
                        
                        <label class="checkbox-container">
                            <input name="AcceptMarketing" type="checkbox">
                            <span class="checkmark"></span>
                            我同意接收 GameCore 的最新消息和促銷資訊 (可選)
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn-primary full-width">
                    <span class="btn-text">建立帳號</span>
                    <div class="btn-loader" style="display: none;">
                        <div class="spinner"></div>
                    </div>
                </button>
            </form>

            <div class="auth-footer">
                <p>已經有帳號了嗎？ <a href="/Account/Login">立即登入</a></p>
            </div>
        </div>
    </div>
</div>

<style>
/* 註冊頁面特殊樣式 */
.register-card {
    max-width: 600px;
    max-height: 90vh;
    overflow-y: auto;
}

.register-form {
    gap: 24px;
}

.form-section {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 20px;
    background: rgba(248, 250, 252, 0.6);
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    margin-bottom: 16px;
}

.section-title {
    margin: 0 0 8px 0;
    font-size: 16px;
    font-weight: 600;
    color: #374151;
    display: flex;
    align-items: center;
    gap: 8px;
}

.section-title::before {
    content: '';
    width: 4px;
    height: 16px;
    background: linear-gradient(135deg, #7557ff, #3b82f6);
    border-radius: 2px;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
}

.required {
    color: #ef4444;
}

.password-strength {
    margin-top: 8px;
}

.strength-bar {
    width: 100%;
    height: 4px;
    background: #e5e7eb;
    border-radius: 2px;
    overflow: hidden;
    margin-bottom: 4px;
}

.strength-fill {
    height: 100%;
    width: 0%;
    background: #ef4444;
    transition: all 0.3s ease;
    border-radius: 2px;
}

.strength-text {
    font-size: 12px;
    color: #64748b;
}

.agreement-section {
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding: 16px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 12px;
    border: 1px solid #e2e8f0;
}

.agreement-section a {
    color: #7557ff;
    text-decoration: none;
    font-weight: 500;
}

.agreement-section a:hover {
    text-decoration: underline;
}

.btn-loader {
    display: flex;
    align-items: center;
    justify-content: center;
}

.spinner {
    width: 20px;
    height: 20px;
    border: 2px solid transparent;
    border-top: 2px solid white;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

/* 響應式設計 */
@media (max-width: 768px) {
    .register-card {
        max-width: 100%;
        margin: 10px;
        max-height: calc(100vh - 20px);
    }
    
    .form-row {
        grid-template-columns: 1fr;
        gap: 12px;
    }
    
    .form-section {
        padding: 16px;
        margin-bottom: 12px;
    }
}

/* 深色模式支援 */
@media (prefers-color-scheme: dark) {
    .form-section {
        background: rgba(22,30,48,.6);
        border-color: #1e2b43;
    }
    
    .section-title {
        color: #e5edff;
    }
    
    .strength-text {
        color: #9fb1c9;
    }
    
    .agreement-section {
        background: rgba(22,30,48,.8);
        border-color: #1e2b43;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.register-form');
    const passwordInput = form.querySelector('input[name="Password"]');
    const confirmPasswordInput = form.querySelector('input[name="ConfirmPassword"]');
    const strengthFill = document.getElementById('strengthFill');
    const strengthText = document.getElementById('strengthText');
    
    // 密碼強度檢測
    function checkPasswordStrength(password) {
        let strength = 0;
        let feedback = '';
        
        if (password.length >= 8) strength += 1;
        if (password.match(/[a-z]/)) strength += 1;
        if (password.match(/[A-Z]/)) strength += 1;
        if (password.match(/[0-9]/)) strength += 1;
        if (password.match(/[^a-zA-Z0-9]/)) strength += 1;
        
        const percentage = (strength / 5) * 100;
        
        switch (strength) {
            case 0:
            case 1:
                feedback = '密碼太弱';
                strengthFill.style.background = '#ef4444';
                break;
            case 2:
                feedback = '密碼較弱';
                strengthFill.style.background = '#f97316';
                break;
            case 3:
                feedback = '密碼普通';
                strengthFill.style.background = '#eab308';
                break;
            case 4:
                feedback = '密碼良好';
                strengthFill.style.background = '#22c55e';
                break;
            case 5:
                feedback = '密碼很強';
                strengthFill.style.background = '#16a34a';
                break;
        }
        
        strengthFill.style.width = percentage + '%';
        strengthText.textContent = feedback;
        
        return strength;
    }
    
    // 密碼輸入事件
    passwordInput.addEventListener('input', function() {
        checkPasswordStrength(this.value);
        validatePasswordMatch();
    });
    
    // 確認密碼輸入事件
    confirmPasswordInput.addEventListener('input', validatePasswordMatch);
    
    function validatePasswordMatch() {
        if (confirmPasswordInput.value && passwordInput.value !== confirmPasswordInput.value) {
            confirmPasswordInput.setCustomValidity('密碼不相符');
            confirmPasswordInput.parentElement.classList.add('error');
        } else {
            confirmPasswordInput.setCustomValidity('');
            confirmPasswordInput.parentElement.classList.remove('error');
        }
    }
    
    // 身分證字號驗證
    const idNumberInput = form.querySelector('input[name="IdNumber"]');
    idNumberInput.addEventListener('input', function() {
        const value = this.value.toUpperCase();
        this.value = value;
        
        if (value.length === 10) {
            if (!validateIdNumber(value)) {
                this.setCustomValidity('身分證字號格式不正確');
            } else {
                this.setCustomValidity('');
            }
        }
    });
    
    function validateIdNumber(id) {
        const regex = /^[A-Z][12][0-9]{8}$/;
        if (!regex.test(id)) return false;
        
        const letterMap = {
            A: 10, B: 11, C: 12, D: 13, E: 14, F: 15, G: 16, H: 17, I: 34, J: 18,
            K: 19, L: 20, M: 21, N: 22, O: 35, P: 23, Q: 24, R: 25, S: 26, T: 27,
            U: 28, V: 29, W: 32, X: 30, Y: 31, Z: 33
        };
        
        const firstLetter = letterMap[id[0]];
        const digits = [Math.floor(firstLetter / 10), firstLetter % 10];
        
        for (let i = 1; i < 10; i++) {
            digits.push(parseInt(id[i]));
        }
        
        const weights = [1, 9, 8, 7, 6, 5, 4, 3, 2, 1];
        const sum = digits.reduce((acc, digit, index) => acc + digit * weights[index], 0);
        
        return sum % 10 === 0;
    }
    
    // 手機號碼格式化
    const cellphoneInput = form.querySelector('input[name="Cellphone"]');
    cellphoneInput.addEventListener('input', function() {
        let value = this.value.replace(/\D/g, '');
        if (value.length > 10) value = value.substring(0, 10);
        this.value = value;
    });
    
    // 表單提交處理
    form.addEventListener('submit', function(e) {
        const submitBtn = this.querySelector('.btn-primary');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoader = submitBtn.querySelector('.btn-loader');
        
        // 最終驗證
        const password = passwordInput.value;
        const passwordStrength = checkPasswordStrength(password);
        
        if (passwordStrength < 3) {
            e.preventDefault();
            alert('密碼強度不足，請使用更安全的密碼');
            return;
        }
        
        if (passwordInput.value !== confirmPasswordInput.value) {
            e.preventDefault();
            alert('密碼確認不相符');
            return;
        }
        
        // 顯示載入狀態
        submitBtn.disabled = true;
        btnText.style.display = 'none';
        btnLoader.style.display = 'flex';
        
        // 如果驗證失敗，恢復按鈕狀態
        setTimeout(() => {
            submitBtn.disabled = false;
            btnText.style.display = 'inline';
            btnLoader.style.display = 'none';
        }, 5000);
    });
    
    // 即時驗證效果
    const inputs = form.querySelectorAll('.form-control');
    inputs.forEach(input => {
        input.addEventListener('blur', function() {
            if (this.checkValidity()) {
                this.parentElement.classList.add('valid');
                this.parentElement.classList.remove('error');
            } else {
                this.parentElement.classList.add('error');
                this.parentElement.classList.remove('valid');
            }
        });
        
        input.addEventListener('input', function() {
            if (this.parentElement.classList.contains('error') && this.checkValidity()) {
                this.parentElement.classList.remove('error');
                this.parentElement.classList.add('valid');
            }
        });
    });
});
</script>

<!-- 額外的樣式 for validation states -->
<style>
.form-group.valid .form-control {
    border-color: #22c55e;
    box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1);
