</div>

<style>
    .forum-banner {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.1));
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .banner-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .banner-subtitle {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 1.5rem;
    }

    .forum-stats {
        display: flex;
        gap: 2rem;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        display: block;
        font-size: 1.5rem;
        font-weight: bold;
        color: #3b82f6;
    }

    .stat-label {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .forums-section {
        padding: 1.5rem;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .forum-category {
        margin-bottom: 2rem;
    }

    .category-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid rgba(255, 255, 255, 0.2);
        color: rgba(255, 255, 255, 0.9);
    }

    .forum-item {
        display: flex;
        align-items: center;
        padding: 1rem;
        margin-bottom: 1rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .forum-item:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateX(5px);
    }

    .forum-icon {
        font-size: 2rem;
        margin-right: 1rem;
        width: 60px;
        text-align: center;
    }

    .forum-info {
        flex-grow: 1;
        margin-right: 1rem;
    }

    .forum-info h5 {
        margin-bottom: 0.25rem;
        font-weight: 600;
    }

    .forum-info h5 a {
        color: inherit;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .forum-info h5 a:hover {
        color: #3b82f6;
    }

    .forum-info p {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .forum-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .latest-post {
        min-width: 200px;
        text-align: right;
    }

    .post-title {
        font-weight: 500;
        margin-bottom: 0.25rem;
        color: rgba(255, 255, 255, 0.9);
    }

    .post-meta {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .post-meta .author {
        color: #3b82f6;
        margin-right: 0.5rem;
    }

    .search-section,
    .hot-threads,
    .online-users,
    .forum-statistics {
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .glass-input {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 8px;
    }

    .glass-input:focus {
        background: rgba(255, 255, 255, 0.15);
        border-color: #3b82f6;
        color: white;
        box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25);
    }

    .glass-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .search-options {
        display: flex;
        gap: 1rem;
        font-size: 0.9rem;
    }

    .form-check-input:checked {
        background-color: #3b82f6;
        border-color: #3b82f6;
    }

    .hot-thread-item {
        display: flex;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .hot-thread-item:last-child {
        border-bottom: none;
    }

    .thread-rank {
        font-size: 1.2rem;
        font-weight: bold;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #ef4444, #f97316);
        border-radius: 50%;
        margin-right: 1rem;
        color: white;
    }

    .thread-content {
        flex-grow: 1;
    }

    .thread-content h6 {
        margin-bottom: 0.25rem;
        font-weight: 500;
    }

    .thread-content h6 a {
        color: inherit;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .thread-content h6 a:hover {
        color: #3b82f6;
    }

    .thread-stats {
        display: flex;
        gap: 1rem;
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .user-item {
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .user-item:last-child {
        border-bottom: none;
    }

    .user-avatar {
        position: relative;
        margin-right: 0.75rem;
    }

    .user-avatar img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
    }

    .online-indicator {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 12px;
        height: 12px;
        background: #10b981;
        border: 2px solid white;
        border-radius: 50%;
    }

    .user-info {
        flex-grow: 1;
    }

    .user-name {
        font-weight: 500;
        margin-bottom: 0.1rem;
    }

    .user-status {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .stat-item {
        text-align: center;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: bold;
        color: #3b82f6;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .latest-member a {
        color: #3b82f6;
        text-decoration: none;
    }

    .latest-member a:hover {
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .forum-banner {
            text-align: center;
        }

        .forum-stats {
            justify-content: center;
            flex-wrap: wrap;
        }

        .forum-item {
